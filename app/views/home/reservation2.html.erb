<script>
     function mySubmit(index) {
      if (index == 1) {
         
        document.myForm.action='/home/reserve_confirm';  
        
      }
     else if (index == 2) {
         
        document.myForm.action='/home/reserve_reject';  
        
      }
      
    
      
      document.myForm.submit();
      
    }
</script>

